<?xml version="1.0"?>
<PMode xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
  xmlns="eu:edelivery:as4:pmode">
  <Id>8.1.14-pmode</Id>
  <Reliability>
    <DuplicateElimination>
      <IsEnabled>false</IsEnabled>
    </DuplicateElimination>
  </Reliability>
  <ReplyHandling>
    <ReplyPattern>Response</ReplyPattern>
    <ReceiptHandling>
      <UseNRRFormat>false</UseNRRFormat>
    </ReceiptHandling>
    <ErrorHandling>
      <UseSoapFault>false</UseSoapFault>
      <ResponseHttpCode>500</ResponseHttpCode>
    </ErrorHandling>
    <ResponseConfiguration>
      <Protocol>
        <Url>http://localhost:9090/msh</Url>
        <UseChunking>false</UseChunking>
        <UseHttpCompression>false</UseHttpCompression>
      </Protocol>
      <TlsConfiguration>
        <IsEnabled>false</IsEnabled>
        <TlsVersion>Tls12</TlsVersion>
        <ClientCertificateReference />
      </TlsConfiguration>
    </ResponseConfiguration>
    <ResponseSigning>
      <IsEnabled>true</IsEnabled>
      <CertificateFindCriteria>
        <CertificateFindType>FindBySubjectName</CertificateFindType>
        <CertificateFindValue>AccessPointB</CertificateFindValue>
      </CertificateFindCriteria>
      <KeyReferenceMethod>BSTReference</KeyReferenceMethod>
      <Algorithm>http://www.w3.org/2001/04/xmldsig-more#rsa-sha256</Algorithm>
      <HashFunction>http://www.w3.org/2001/04/xmlenc#sha256</HashFunction>
    </ResponseSigning>
  </ReplyHandling>
  <ExceptionHandling>
    <NotifyMessageConsumer>false</NotifyMessageConsumer>
    <NotifyMethod />
  </ExceptionHandling>
  <Security>
    <SigningVerification>
      <Signature>Allowed</Signature>
    </SigningVerification>
    <Decryption>
      <Encryption>Ignored</Encryption>
      <CertificateFindCriteria>
        <CertificateFindType>FindByThumbprint</CertificateFindType>
        <CertificateFindValue />
      </CertificateFindCriteria>
    </Decryption>
  </Security>
  <MessagePackaging>
    <PartyInfo>
      <FromParty>
        <PartyIds>
          <PartyId>
            <Id>org:holodeckb2b:example:company:D</Id>
          </PartyId>
        </PartyIds>
        <Role>Sender</Role>
      </FromParty>
      <ToParty>
        <PartyIds>
          <PartyId>
            <Id>org:holodeckb2b:example:company:C</Id>
          </PartyId>
        </PartyIds>
        <Role>Receiver</Role>
      </ToParty>
    </PartyInfo>
    <CollaborationInfo>
      <ConversationId>org:holodeckb2b:example:conversation</ConversationId>
      <AgreementReference>
        <Name>http://agreements.holodeckb2b.org/examples/agreement0</Name>
      </AgreementReference>
      <Action>StoreMessage</Action>
      <Service>
        <Name>Examples</Name>
        <Type>org:holodeckb2b:services</Type>
      </Service>
    </CollaborationInfo>
  </MessagePackaging>
  <MessageHandling>
    <Deliver>
      <IsEnabled>true</IsEnabled>
      <PayloadReferenceMethod>
        <Type>FILE</Type>
        <Parameters>
          <Parameter name="location" value=".\messages\in\" />
        </Parameters>
      </PayloadReferenceMethod>
      <DeliverMethod>
        <Type>FILE</Type>
        <Parameters>
          <Parameter name="location" value=".\messages\in\" />
        </Parameters>
      </DeliverMethod>
    </Deliver>
  </MessageHandling>
</PMode>