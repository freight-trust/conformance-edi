<schema xmlns="http://xlate.io/EDISchema/v4">

  <transaction>
    <sequence>
      <segment type="S02" />

      <loop code="L0000" maxOccurs="5">
        <sequence>
          <segment type="S10" />
          <segment type="S11" maxOccurs="5" />
          <segment type="S12" />
          <segment type="S13" />

          <loop code="L0002" maxOccurs="5">
            <sequence>
              <segment type="S30" />
              <segment type="S31" maxOccurs="10" />
              <segment type="S32" />
            </sequence>
          </loop>
        </sequence>
      </loop>

      <loop code="L0001" maxOccurs="5">
        <sequence>
          <segment type="S20" />
          <segment type="S21" />
        </sequence>
      </loop>
    </sequence>
  </transaction>

  <implementation>
    <sequence>
      <segment type="S02" />

      <loop type="L0000" code="0000A" minOccurs="1" discriminator="1">
        <sequence>
          <segment type="S10">
            <description>First occurrence of Loop L0000</description>
            <sequence>
              <element position="1">
                <enumeration>
                  <value>A</value>
                </enumeration>
              </element>
            </sequence>
          </segment>
          <segment type="S12" minOccurs="1" />

          <loop type="L0002" code="0002AXX" discriminator="2.2" title="2AXX">
            <description>A nested loop with discriminator on a component beyond the first position.</description>
            <sequence>
              <segment type="S30">
                <sequence>
                  <element position="1">
                  </element>
                  <composite position="2" minOccurs="1" maxOccurs="2">
                    <description>A repeatable composite</description>
                    <sequence>
                      <element position="1" />
                      <element position="2">
                        <description>Discriminator value in a component element</description>
                        <enumeration>
                          <value>XX</value>
                        </enumeration>
                      </element>
                    </sequence>
                  </composite>
                </sequence>
              </segment>
              <segment type="S32" />
            </sequence>
          </loop>
          <loop type="L0002" code="0002AYY" discriminator="2.2">
            <sequence>
              <segment type="S30">
                <sequence>
                  <element position="1" />
                  <composite position="2" minOccurs="1">
                    <sequence>
                      <element position="1" />
                      <element position="2">
                        <enumeration>
                          <value>YY</value>
                        </enumeration>
                      </element>
                    </sequence>
                  </composite>
                </sequence>
              </segment>
              <segment type="S31" discriminator="1" maxOccurs="1">
                <sequence>
                  <element position="1">
                    <enumeration>
                      <value>A</value>
                    </enumeration>
                  </element>
                </sequence>
              </segment>
              <segment type="S31" discriminator="1" minOccurs="2" maxOccurs="3" code="S31B">
                <sequence>
                  <element position="1">
                    <enumeration>
                      <value>B</value>
                    </enumeration>
                  </element>
                </sequence>
              </segment>
            </sequence>
          </loop>
        </sequence>
      </loop>

      <loop type="L0000" code="0000B" minOccurs="0" maxOccurs="2" discriminator="1">
        <sequence>
          <segment type="S10">
            <sequence>
              <element position="1">
                <enumeration>
                  <value>B</value>
                </enumeration>
              </element>
            </sequence>
          </segment>
          <segment type="S12" maxOccurs="2" />
        </sequence>
      </loop>

      <loop type="L0000" code="0000C" minOccurs="0" maxOccurs="1" discriminator="1">
        <sequence>
          <segment type="S10">
            <sequence>
              <element position="1">
                <enumeration>
                  <value>C</value>
                </enumeration>
              </element>
            </sequence>
          </segment>
        </sequence>
      </loop>
    </sequence>
  </implementation>

  <elementType name="E999" base="string" />
  <elementType name="E888" base="string" />

  <elementType name="E777" base="identifier">
    <enumeration>
      <value>XX</value>
      <value>YY</value>
      <value>ZZ</value>
    </enumeration>
  </elementType>

  <compositeType name="C001">
    <sequence>
      <element type="E888" />
      <element type="E777" />
    </sequence>
  </compositeType>

  <segmentType name="S10">
    <sequence>
      <element type="E999" minOccurs="1" />
    </sequence>
  </segmentType>

  <segmentType name="S11">
    <sequence>
      <element type="E999" minOccurs="1" />
    </sequence>
  </segmentType>

  <segmentType name="S12">
    <sequence>
      <element type="E999" minOccurs="1" />
    </sequence>
  </segmentType>

  <segmentType name="S13">
    <sequence>
      <element type="E999" minOccurs="1" />
    </sequence>
  </segmentType>

  <segmentType name="S20">
    <sequence>
      <element type="E999" minOccurs="1" />
    </sequence>
  </segmentType>

  <segmentType name="S21">
    <sequence>
      <element type="E999" minOccurs="1" />
    </sequence>
  </segmentType>

  <segmentType name="S30">
    <sequence>
      <element type="E999" />
      <composite type="C001" minOccurs="1" />
    </sequence>
  </segmentType>

  <segmentType name="S31">
    <sequence>
      <element type="E999" minOccurs="1" />
    </sequence>
  </segmentType>

  <segmentType name="S32">
    <sequence>
      <element type="E888" minOccurs="1" />
    </sequence>
  </segmentType>

  <segmentType name="S02">
    <sequence>
      <element type="E999" minOccurs="1" />
    </sequence>
  </segmentType>
</schema>
